{
    "name": "View On Morfix",
    "description": "View the word and the translation on Morfix easily.",
    "version": "0.1.0",

    "icons": { 
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png" 
    },

    "permissions": ["contextMenus","activeTab"],

    "browser_action": {
        "default_title": "View On Morfix",
        "default_icon": {                    
            "19": "images/icon19.png",           
            "38": "images/icon38.png"           
        }
    },

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "manifest_version": 2
}